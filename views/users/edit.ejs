<% layout('layouts/boilerplate')  %>
<div class="row">
    <h1 class="text-center">Edit User</h1>
    <div class="col-6 offset-3">
        <form action="/users/<%= user._id %>?_method=PUT" method="post">
            <div class="mb-3">
                <label class = "form-label" for="name">Full Name</label>
                <input class="form-control" type="text" id="name" name="user[fullName]" value="<%= user.fullName %>"> <!-- Use 'fullName' -->
            </div>
            <div class="mb-3">
                <label class = "form-label" for="email">Email Address</label>
                <input class="form-control" type="email" id="email" name="user[email]" value="<%= user.email %>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="hobbies">Favourite Hobby</label>
                <input class="form-control" type="text" id="hobbies" name="user[hobbies]" value="<%= user.hobbies[0] %>"> <!-- Use 'hobbies' -->
            </div>
            <div class="mb-3">
                <label class = "form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="user[location]" value="<%= user.location %>">
            </div>
            <div class="mb-3">
                <label class = "form-label" for="password">Password</label>
                <input class="form-control" type="password" id="password" name="user[password]" value="<%= user.location %>">
            </div>
            <div class="mb-3">
                <label class = "form-label" for="image">Profile Image URL</label>
                <input class="form-control" type="text" id="image" name="user[profileImageURL]" value="<%= user.profileImageURL %>">
            </div>
            <div class="mb-3">
                <label class = "form-label" for="description">Description</label>
                <textarea class="form-control" type="text" id="description" name="user[description]"><%= user.description %></textarea>
            </div>
            <div class="mb-3"><button class="btn btn-info">New Mee!!</button></div>
        </form>
        <footer>
            <a href="/users/<%= user._id %>">Back To User!!</a>
        </footer> 
    </div>
</div>


    